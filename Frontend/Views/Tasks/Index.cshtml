@using System.Configuration
@model Frontend.ViewModels.TasksOverview

    @{
    Layout = null;
    }
    <!DOCTYPE HTML>
    <html>
    <head>
        <title>Task Scheduler | @ConfigurationManager.AppSettings["Environment"]</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/style.css")" />
    </head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="@Url.Content("~/Content/Images/opentable-logo.png")" class="logo"> Task Scheduler
                    </a>
                </div>
            </div>
        </div>

    <div class="container" id="tasks">

        @{
            if (Model.Triggered)
            {
                <div class="alert alert-info" role="alert">
                    <h4>Task Triggered</h4>
                    <p>Hold onto your hats!</p>
                </div>
            }
        }

        <h4>Enabled Tasks</h4>
        @Html.Partial("_TasksTable", Model.EnabledTasks)
        <hr/>

        <h4>Disabled Tasks</h4>
        @Html.Partial("_TasksTable", Model.DisabledTasks)
    </div>
    </body>
</html>